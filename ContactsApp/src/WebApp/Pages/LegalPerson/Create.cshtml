@page
@model WebApp.Legal.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Person</h1>

@{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success" id="success-alert" style="margin-top: 40px;">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong>@Model.Message ! </strong>
        </div>
    }
}

<form method="post">
    <table class="table">
        <tr>
            <b>Company details</b>
        </tr>
        <tr>
            <th>Name :  </th>
            <td><input type="text" asp-for="legalPerson.CompanyName" /></td>
        </tr>
        <tr>
            <th>CNPJ : </th>
            <td><input type="text" asp-for="legalPerson.CNPJ" /></td>
        </tr>
        <tr>
            <th>TradeName : </th>
            <td><input type="text" asp-for="legalPerson.TradeName" /></td>
        </tr>

    </table>
    <table class="table">
        <tr>
            <b>Address details</b>
        </tr>
        <tr>
            <th>Country : </th>
            <td> <input type="text" asp-for="legalPerson.Address.Country" /></td>
        </tr>
        <tr>
            <th>State : </th>
            <td><input type="text" asp-for="legalPerson.Address.State" /></td>
        </tr>
        <tr>
            <th>City : </th>
            <td><input type="text" asp-for="legalPerson.Address.City" /></td>
        </tr>
        <tr>
            <th>ZipCode :  </th>
            <td><input type="text" asp-for="legalPerson.Address.ZipCode" /></td>
        </tr>
        <tr>
            <th>Line1 : </th>
            <td> <input type="text" asp-for="legalPerson.Address.AddressLine.Line1" /></td>
        </tr>
        <tr>
            <th>Line2 :  </th>
            <td><input type="text" asp-for="legalPerson.Address.AddressLine.Line2" /></td>
        </tr>
    </table>
    <input type="submit" value="Add" />
    <a asp-page="Index">Back to list</a>
</form>