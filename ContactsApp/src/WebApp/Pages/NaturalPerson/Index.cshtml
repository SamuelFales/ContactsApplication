@page
@model WebApp.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Natural persons contacts</h2>

<form method="post">
    <div class="container">
        @{
            if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success" id="success-alert" style="margin-top: 40px;">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <strong>@Model.Message ! </strong>
                </div>
            }
        }
        <a class="btn btn-success btn-sm" asp-page="Create">Add new person</a>
        </p>
        <table class="table" style="border:2px solid black;">
            <tr class="unread">
                <th>ID</th>
                <th>NAME</th>
                <th>CPF</th>
                <th>GENDER</th>
                <th>BIRTHDAY</th>
                <th>ACTIONS</th>
            </tr>
            @foreach (var item in Model.naturalPersons)
            {
                <tr>
                    <td class="view-message">
                        <h5>@item.Id</h5>
                    </td>
                    <td class="view-message">
                        <h5>@item.Name</h5>
                    </td>
                    <td class="view-message">
                        <h5>@item.CPF</h5>
                    </td>
                    <td class="view-message">
                        <h5>@item.Gender</h5>
                    </td>
                    <td class="view-message">
                        <h5>@item.Birthday</h5>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary btn-sm" asp-page="Details" asp-route-id="@item.Id">Details</a>
                        <button type="submit" class="btn btn-danger  btn-sm" asp-page-handler="Delete" asp-route-id="@item.Id"
                                onclick="return confirm('Are you sure you want to delete this  person?');">
                            Delete
                        </button>


                    </td>
                </tr>
            }
        </table>
    </div>
</form>