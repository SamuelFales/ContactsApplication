@page
@model WebApp.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create person</h1>

@{
    if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success" id="success-alert" style="margin-top: 40px;">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong>@Model.Message ! </strong>
        </div>
    }
}

<form method="post">
    <table class="table">
        <tr>
            <b>Person details</b>
        </tr>
        <tr>
            <th>Name :  </th>
            <td><input type="text" asp-for="naturalPerson.Name" /></td>
        </tr>
        <tr>
            <th>CPF : </th>
            <td><input type="text" asp-for="naturalPerson.CPF" /></td>
        </tr>
        <tr>
            <th>Gender : </th>
            <td><input type="text" asp-for="naturalPerson.Gender" /></td>
        </tr>
        <tr>
            <th>Birthday :  </th>
            <td><input type="text" asp-for="naturalPerson.Birthday" /></td>
        </tr>
    </table>
    <table class="table">
        <tr>
            <b>Address details</b>
        </tr>
        <tr>
            <th>Country :  </th>
            <td><input type="text" asp-for="naturalPerson.Address.Country" /></td>
        </tr>
        <tr>
            <th>State : </th>
            <td><input type="text" asp-for="naturalPerson.Address.State" /></td>
        </tr>
        <tr>
            <th>City : </th>
            <td><input type="text" asp-for="naturalPerson.Address.City" /></td>
        </tr>
        <tr>
            <th>ZipCode :  </th>
            <td><input type="text" asp-for="naturalPerson.Address.ZipCode" /></td>
        </tr>
        <tr>
            <th>Line1 : </th>
            <td><input type="text" asp-for="naturalPerson.Address.AddressLine.Line1" /></td>
        </tr>
        <tr>
            <th>Line2 : </th>
            <td><input type="text" asp-for="naturalPerson.Address.AddressLine.Line2" /></td>        
        </tr>
    </table>
    <input type="submit" value="Add" />
    <a asp-page="Index">Back to list</a>
</form>